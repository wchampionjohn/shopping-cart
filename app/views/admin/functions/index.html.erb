<div class="page-bar">
  <%= breadcrumb('功能設定') %>
</div>
<h1 class="page-title">功能設定</h1>
<div>
  <div class="table-scrollable">
    <table class="table table-striped table-bordered table-advance table-hover table-list">
      <tr>
        <th></th>
        <th>是否開放</th>
        <th>名稱</th>
        <th>建立時間</th>
        <th>最後更新</th>
      </tr>
      <% @functions.each do |function| %>
      <tr>
        <td class="ui-helper-center">
          <%= link_to(detail_edit_path function) do %>
            <i class="fa fa-pencil"></i>
          <% end %>
        </td>
        <td><%= check_icon function.is_open %></td>
        <td><%= function.title %></td>
        <td><%= function.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= function.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
