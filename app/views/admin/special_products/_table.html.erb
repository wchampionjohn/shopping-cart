<div class="table-scrollable">
  <table class="table table-striped table-bordered table-advance table-hover table-list">
    <tr>
      <th></th>
      <th>商品名稱</th>
      <th>開放中</th>
      <th>原價</th>
      <th>折扣方式</th>
      <th>特價</th>
      <th>開放時間</th>
      <th>建立時間</th>
      <th>修改時間</th>
    </tr>
    <% current_collection.each do |special| %>
    <tr>
      <td class="ui-helper-center">
        <%= link_to(edit_admin_special_product_path(special), class: 'btn btn-default btn-xs') do %>
        <i class="fa fa-pencil"></i>
        <% end %>
        <%= link_to(admin_special_product_path(special),  method: :delete, class: 'btn btn-default btn-xs', data: { "confirm-swal" =>  '確定刪除嗎 ?' }) do %>
        <i class="fa fa-trash"></i>
        <% end %>
      </td>
      <td>
        <%= link_to(
        special.product.title,
        edit_admin_product_path(special.product_id),
        target: "_blank"
        ) %>
        <td class="ui-helper-center">
          <%= check_icon !special.is_limiting? %>
        </td>
      </td>
      <td>
        <%= special.product.price %>
      </td>
      <td>
        <%= SpecialProduct.human_attribute_enum('special_type')[special.special_type] %>
      </td>
      <td>
        <%= special.special_price %>
      </td>
      <td>
        <%= during_of_open special %>
      </td>
      <td>
        <%= special.created_at.strftime("%Y-%m-%d %H:%M") %>
      </td>
      <td>
        <%= special.updated_at.strftime("%Y-%m-%d %H:%M") %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
